= doctype html
html lang=en
  head
    meta charset=utf-8
    title Gothello

    link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css"
    link rel="stylesheet" href="/static/css/styles.css"

  body
    script src="/static/js/ui.js" type="text/javascript"
    div.main
      = yield board

      .players
        div.selects
          div.select
            select value=1 id="black"
              option value=1 Human
              option value=2 Random AI
              option value=3 Less Random AI
          div.select
            select value=3 id="white"
              option value=1 Human
              option value=2 Random AI
              option value=3 Less Random AI
        div
          a.button.is-dark.swap id="swap" onclick="_swap_action()"  â‡…
  
      div.buttons
        a.button.is-primary id="start" onclick="_start_action({{.nextToMove}}, {{.actions}})" Start
        a.button.is-primary id="restart" onclick="_restart_action({{.nextToMove}}, {{.actions}})" Restart

   